# Bristol Park Hospital Management System - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ===================================
# APPLICATION CONFIGURATION
# ===================================
VITE_APP_NAME="Bristol Park Hospital Management System"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# ===================================
# API CONFIGURATION
# ===================================
VITE_API_BASE_URL="http://localhost:5174/api"
REACT_APP_API_URL="http://localhost:5174/api"
VITE_API_TIMEOUT=30000

# Legacy System Integration
REACT_APP_LEGACY_API_URL="http://localhost:8080/api"
REACT_APP_ENABLE_LEGACY_INTEGRATION=true
REACT_APP_USE_LEGACY_AUTH=true
REACT_APP_SYNC_PATIENT_DATA=true

# ===================================
# DATABASE CONFIGURATION
# ===================================
# PostgreSQL Database Settings
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="bristol_park_hmis"
DB_USER="postgres"
DB_PASSWORD="your_secure_password_here"
DB_SSL="false"

# ===================================
# AUTHENTICATION & SECURITY
# ===================================
JWT_SECRET="your_jwt_secret_key_here_minimum_32_characters"
JWT_EXPIRES_IN="24h"

# Authentication Keys
REACT_APP_AUTH_TOKEN_KEY="bristol_park_token"
REACT_APP_AUTH_REFRESH_TOKEN_KEY="bristol_park_refresh_token"
REACT_APP_AUTH_TOKEN_EXPIRY=3600

# ===================================
# HOSPITAL CONFIGURATION
# ===================================
HOSPITAL_NAME="Bristol Park Hospital"
HOSPITAL_CODE="BPH"

# Branch Configuration
REACT_APP_DEFAULT_BRANCH="fedha"

# Hospital Branches
VITE_HOSPITAL_BRANCHES='[
  {"id": 18, "name": "Bristol Park Hospital - Main", "location": "Main Campus"},
  {"id": 19, "name": "Bristol Park Hospital - Fedha", "location": "Fedha Branch"},
  {"id": 20, "name": "Bristol Park Hospital - Utawala", "location": "Utawala Branch"},
  {"id": 21, "name": "Bristol Park Hospital - Tassia", "location": "Tassia Branch"},
  {"id": 22, "name": "Bristol Park Hospital - Machakos", "location": "Machakos Branch"},
  {"id": 23, "name": "Bristol Park Hospital - Kitengela", "location": "Kitengela Branch"}
]'

# ===================================
# EXTERNAL INTEGRATIONS
# ===================================
# SMART API Integration
SMART_API_BASE_URL="https://api.smart.co.ke"
SMART_API_KEY="your_smart_api_key_here"

# Slade360 Integration
SLADE360_API_URL="https://api.slade360.com"
SLADE360_API_KEY="your_slade360_api_key_here"

# SHA (Social Health Authority) Integration
SHA_API_URL="https://api.sha.go.ke"
SHA_API_KEY="your_sha_api_key_here"

# Lab Integrations
CITYSCAN_API_URL="https://api.cityscan.co.ke"
CITYSCAN_API_KEY="your_cityscan_api_key_here"

SCANLAB_API_URL="https://api.scanlab.co.ke"
SCANLAB_API_KEY="your_scanlab_api_key_here"

# ===================================
# EMAIL CONFIGURATION
# ===================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@bristolparkhospital.com"
SMTP_PASS="your_email_password_here"

# System Email Addresses
SYSTEM_EMAIL="system@bristolparkhospital.com"
ADMIN_EMAIL="admin@bristolparkhospital.com"

# ===================================
# FEATURE FLAGS
# ===================================
REACT_APP_ENABLE_DARK_MODE=false
REACT_APP_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_ANALYTICS=true

# ===================================
# ANALYTICS & LOGGING
# ===================================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=""
REACT_APP_LOG_LEVEL="error"
LOG_LEVEL="info"

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
NODE_ENV="development"
DEBUG="true"
VITE_HMR_PORT="5173"
API_PORT="5174"

# ===================================
# PRODUCTION SETTINGS
# ===================================
# Uncomment for production deployment
# NODE_ENV="production"
# DEBUG="false"
# VITE_APP_ENVIRONMENT="production"
# DB_SSL="true"
# LOG_LEVEL="warn"

# ===================================
# SECURITY & COMPLIANCE
# ===================================
CORS_ORIGIN="http://localhost:5173"
HIPAA_COMPLIANCE="true"
DATA_ENCRYPTION="true"

# ===================================
# PERFORMANCE SETTINGS
# ===================================
CACHE_TTL="3600"
RATE_LIMIT_MAX="100"
