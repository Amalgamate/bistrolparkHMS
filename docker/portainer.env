# Bristol Park HMS - Portainer Environment Variables
# Copy these variables to Portainer Stack Environment section
# NEVER commit this file with real values to Git

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
DOMAIN=your-domain.com
FRONTEND_PORT=80
API_PORT=3001

# ===========================================
# DATABASE CONFIGURATION (CRITICAL)
# ===========================================
DB_NAME=bristol_park_hmis
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD_MIN_16_CHARS
DB_EXTERNAL_PORT=5433
DB_SSL=false

# ===========================================
# SECURITY CONFIGURATION (CRITICAL)
# ===========================================
JWT_SECRET=CHANGE_THIS_TO_SECURE_JWT_SECRET_MINIMUM_32_CHARACTERS_LONG
JWT_EXPIRES_IN=24h

# ===========================================
# REDIS CONFIGURATION (OPTIONAL)
# ===========================================
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_REDIS_PASSWORD

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
ENABLE_METRICS=true

# ===========================================
# HIPAA COMPLIANCE SETTINGS
# ===========================================
ENABLE_AUDIT_LOGS=true
ENABLE_ENCRYPTION_AT_REST=true
SESSION_TIMEOUT=3600

# ===========================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=system@bristolparkhospital.com
SMTP_PASS=your_app_password_here

# ===========================================
# PORTAINER SPECIFIC SETTINGS
# ===========================================
COMPOSE_PROJECT_NAME=bristol-park-hms
STACK_NAME=bristol-park-hms-production
